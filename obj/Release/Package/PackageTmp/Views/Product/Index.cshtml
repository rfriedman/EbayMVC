@model IEnumerable<EbayMVC.Models.Products>

@{
    ViewBag.Title = "Select Product to View";
    
}
<div id="container">
<div class="grid">
@{using(Html.BeginForm("Create", "Product", FormMethod.Post))
  {
     
    <h2>@Html.Encode(ViewData["Message"])</h2>
       <strong> Search KeyWord:</strong>
     
      @Html.TextBox("keyword", null, new { @class = "search"})
        <input type="submit" value="Search" />
        
  }
  }
        </div>



    
@foreach (var item in Model)
{
    

        

	<div class="grid">
		<div class="imgholder">
			<img src=" @Html.DisplayFor(modelItem => item.gallery_url)" />
		</div>
		<strong>@Html.DisplayFor(modelItem => item.item_title)</strong>
		<p><a href=" @Html.DisplayFor(modelItem => item.listing_url)"> Click to view</a></p>
</div>
    
    
}
</div>
